{
    "name": "mharj-fi-business-id",
    "version": "0.1.0",
    "description": "Finnish Business ID (Y-tunnus) validation and builder",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "require": "./dist/index.js",
            "import": "./dist/index.mjs"
        }
    },
    "scripts": {
        "build": "tsup src/index.ts --sourcemap --format cjs,esm --dts --clean",
        "prepublishOnly": "npm run build",
        "test": "vitest test --run --no-isolate --coverage",
        "coverage": "vitest test --run --no-isolate --reporter=dot --coverage --coverage.reporter=lcov",
        "lint": "eslint . --ext .ts",
        "validate": "tsc --noEmit"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/mharj/fi-business-id.git"
    },
    "files": [
        "dist"
    ],
    "keywords": [
        "businessid"
    ],
    "author": "mharj",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/mharj/fi-business-id/issues"
    },
    "homepage": "https://github.com/mharj/fi-business-id#readme",
    "devDependencies": {
        "@cspell/eslint-plugin": "^8.18.0",
        "@eslint/js": "^9.23.0",
        "@stylistic/eslint-plugin": "^4.2.0",
        "@stylistic/eslint-plugin-ts": "^4.2.0",
        "@types/node": "^22.13.14",
        "@typescript-eslint/eslint-plugin": "^8.28.0",
        "@typescript-eslint/parser": "^8.28.0",
        "@vitest/coverage-v8": "^3.0.9",
        "c8": "^10.1.3",
        "eslint": "^9.23.0",
        "eslint-config-prettier": "^10.1.1",
        "eslint-import-resolver-typescript": "^4.2.5",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-jsdoc": "^50.6.9",
        "eslint-plugin-prettier": "^5.2.5",
        "eslint-plugin-sonarjs": "^3.0.2",
        "source-map-support": "^0.5.21",
        "tsup": "^8.4.0",
        "typescript": "^5.8.2",
        "typescript-eslint": "^8.28.0",
        "vite": "^6.2.3",
        "vitest": "^3.0.9"
    },
    "packageManager": "pnpm@10.7.0+sha512.6b865ad4b62a1d9842b61d674a393903b871d9244954f652b8842c2b553c72176b278f64c463e52d40fff8aba385c235c8c9ecf5cc7de4fd78b8bb6d49633ab6"
}
