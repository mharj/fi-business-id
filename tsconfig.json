{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		"lib": ["es2017", "dom"],
		"rootDir": "./src",
		"outDir": "./dist",
		"moduleResolution": "node",
		"sourceRoot": "./src",
		"types": ["node"],
		"declaration": true,
		"removeComments": false,
		"sourceMap": true,
		"inlineSources": true,
		"inlineSourceMap": false,
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"importHelpers": true,
		"strictNullChecks": true,
		"noUnusedLocals": true,
		"noUncheckedIndexedAccess": true,
		"strict": true
	},
	"include": ["src/"],
	"exclude": ["node_modules", "**/*.spec.ts", "test"]
}
